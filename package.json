{
  "name": "auth-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \\\"src/**/*.ts\\\" \\\"src/test/**/*.ts\\\" \\\"libs/**/*.ts\\\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "ENV=test jest --watch",
    "test:cov": "ENV=test jest --coverage --runInBand",
    "test:debug": "ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "ENV=test jest --runInBand  --config  src/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.5.1",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/cqrs": "^7.0.1",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/swagger": "^4.7.2",
    "@nestjs/typeorm": "^7.1.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/faker": "^5.1.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/luxon": "^1.25.0",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^8.3.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "faker": "^5.1.0",
    "google-libphonenumber": "^3.2.14",
    "jsonwebtoken": "^8.5.1",
    "luxon": "^1.25.0",
    "nodemailer": "^6.4.15",
    "pg": "^8.4.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "sqlite3": "^5.0.0",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.29",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/google-libphonenumber": "^7.4.19",
    "@types/jest": "^25.2.3",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^26.0.1",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@tss/common/(.*)": "<rootDir>/libs/common/src/$1",
      "@tss/common": "<rootDir>/libs/common/src",
      "@tss/security/(.*)": "<rootDir>/libs/security/src/$1",
      "@tss/security": "<rootDir>/libs/security/src",
      "@tss/nest-test-starter/(.*)": "<rootDir>/libs/nest-test-starter/src/$1",
      "@tss/nest-test-starter": "<rootDir>/libs/nest-test-starter/src"
    }
  }
}
